<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mogsev.fragmentapp.gui.fragments.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray300"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment_first" />

        <Button
            android:id="@+id/button_open_second_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Open second fragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_open_fourth_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Open fourth fragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_open_second_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:text="Open second activity" />

        <Button
            android:id="@+id/button_open_third_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:text="Open third activity" />

        <Button
            android:id="@+id/button_open_menu_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:text="Open menu activity" />

    </LinearLayout>

</layout>
